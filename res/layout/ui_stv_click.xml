<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="#ffffff"
    android:gravity="center_vertical" >
    <ImageView
        android:id="@+id/iv_stv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />
    <TextView
        android:id="@+id/tv_stv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/iv_stv_left"
        android:text="@string/ui_plv_footer_hint_normal" />
    <TextView 
        android:id="@+id/tv_stv_bottom_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_alignBottom="@id/iv_stv_left"
        android:layout_height="0.5dip"
        android:background="#cccccc"
        />
</RelativeLayout>