<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:concordya="http://schemas.android.com/apk/res/com.concordy.pro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88cccccc"
    android:orientation="vertical" >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_bt_company_info"
         android:id="@+id/setting"
         />
    <com.concordy.pro.ui.ItemClickView
        concordya:leftImg ="@drawable/icon"
        android:id="@+id/icv_com_info"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    concordya:bottomLine="true"
	    concordya:txt="@string/str_bt_company_info"
	   />
	
	<com.concordy.pro.ui.ItemClickView
	    android:layout_marginTop="20dip"
	    android:id="@+id/icv_more_set"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    concordya:leftImg ="@drawable/icon"
	    concordya:txt="@string/str_more_set"
	   />
</LinearLayout>